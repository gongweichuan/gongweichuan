<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans> 
	<bean id="systemtray" init-method="init" class="com.chinaviponline.erp.corepower.tray.SystemTrayFrame">
		<constructor-arg>
			<value>tray.gif</value>
		</constructor-arg>
		<property name="menuItem">
			<list>
				<value>*4SystemtrayPopmenu</value>
			</list>
		</property>
		<property name="picName">
			<value>tray.gif</value>
		</property>
	</bean>
	
	<bean id="addToTrayiconPopMenuAdvice" class="com.chinaviponline.erp.corepower.tray.AddToTrayiconPopMenuAdvice">
	</bean>
	<!-- 自动代理 -->
	<bean  class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
		<property name="beanNames">			
				<value>*4SystemtrayPopmenu</value>					
		</property>
		<property name="interceptorNames">
			<list>
				<value>addToTrayiconPopMenuAdvice</value>
			</list>
		</property>
	</bean>
</beans> 
