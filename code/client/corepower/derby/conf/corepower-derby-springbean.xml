<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans> 
	<!-- 嵌入式数据库服务 derby -->
	<bean id="tEmbeddedDerbyFrame"   init-method="init" class="com.chinaviponline.corepower.derby.impl.TEmbeddedDerbyFrame">
		<property name="derbyProps">
			<props>
				<prop key="derby.system.home">${erp.home.dir}\\deploy</prop>
				<prop key="derby.stream.error.file">${erp.home.dir}log\\db.log</prop>
			</props>
		</property>
		<property name="createSysProps">
			<!-- 创建系统属性表 type="java.lang.String" -->
			<value>createSysProps</value>
		</property>
		<!--
		<property name="sqlMap">
			<ref bean="sqlMapClient"></ref>
		</property>  -->
		<property name="createSysPropsTable">
			<ref bean="createSysPropsTable"></ref>
		</property>
	</bean>	
	
	<bean id="createSysPropsTable" class="com.chinaviponline.corepower.derby.impl.TCreateSysPropsTableImpl">
        <!--property name="dataSource">
            <ref bean="dataSource" />
        </property -->
        <property name="sqlMapClient">
            <ref bean="sqlMapClient" />
        </property>    
		<property name="existTableSysProps">
			<value>existTableSysProps</value>
		</property>  
		<property name="createSysProps">
			<value>createSysProps</value>
		</property>
    </bean>	
</beans> 