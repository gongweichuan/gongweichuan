<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans> 
	<bean id="extensionsOperate" class="com.chinaviponline.erp.corepower.tray.impl.TOperateTableExtensionsImpl">
		<property name="existTableExtensions">			
			<value>existTableExtensions</value>
		</property>
		<property name="createTableExtensions">			
			<value>createTableExtensions</value>
		</property>
		<property name="existExtensionPoint">			
			<value>existExtensionPoint</value>
		</property>
		<property name="deleteExtensions">			
			<value>deleteExtensions</value>
		</property>
		<property name="insertIntoExtensions">			
			<value>insertIntoExtensions</value>
		</property>
		<property name="selectExtensions">			
			<value>selectExtensions</value>
		</property>
		<property name="updateExtensions">			
			<value>updateExtensions</value>
		</property>
		<property name="sqlMapClient" >
			<ref bean="sqlMapClient"></ref>
		</property>
	</bean>
	
	<bean class="com.chinaviponline.erp.corepower.tray.impl.TExtensionsFromDBImpl" init-method="init">
		<property name="extensionPoints">
			<list>
				<value type="java.lang.Integer">100</value>
				<value type="java.lang.Integer">101</value>
			</list>
		</property>
		<property name="extensionBean">
			<value>snowJMenu</value>
		</property>
		<property name="operate">
			<ref local="extensionsOperate"></ref>
		</property>
	</bean> 
	<bean id="extensionsFromDB" class="com.chinaviponline.erp.corepower.tray.impl.TExtensionsFromDBImpl" singleton="false">
		<property name="operate">
			<ref local="extensionsOperate"></ref>
		</property>
	</bean>
	
